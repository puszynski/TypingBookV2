<!-- Modal -->
<div class="modal fade" id="reeditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("ReeditBooksContent", "Administrator", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)

                    <fieldset>
                        Select a file <input type="file" name="file" />
                        <input type="submit" value="Upload" />
                    </fieldset>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info">Confirm</button>
            </div>
        </div>
    </div>
</div>